@page
@model LoginModel
@{
    Layout = "_LayoutAccount";
}

            <form method="post">
                <div class="form-login text-center">
                    <h1 class='text-white'>Login Form</h1>
                    <br>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control input-sm chat-input" placeholder="email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control input-sm chat-input" placeholder="password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">LOGIN <i class="fa fa-sign-in"></i></button>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <a asp-page="./ForgotPassword">Forgot your password?</a>
                        </div>
                        <div class="col-md-6">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </div>
                        <br>
                    </div>
                </div>
            </form>