@page
@model ForgotPasswordModel
@{
    Layout = "_LayoutAccount";
}

<form method="post">
    <div class="form-login text-center">
        <h1 class='text-white'>Forgot Password Form</h1>
        <br>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control input-sm chat-input" placeholder="Enter your email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-default">SUBMIT <i class="fa fa-sign-in"></i></button>
    </div>
</form>